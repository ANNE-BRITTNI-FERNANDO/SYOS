# SYOS Environment Configuration
# Database connection settings for different environments

# Development Environment (XAMPP Local)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=syos_db
DB_USERNAME=syos_user
DB_PASSWORD=temp1234
DB_DRIVER=com.mysql.cj.jdbc.Driver

# Connection Pool Settings
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_INITIAL_SIZE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# MySQL specific settings
DB_USE_SSL=false
DB_ALLOW_PUBLIC_KEY_RETRIEVAL=true
DB_SERVER_TIMEZONE=UTC

# Application Settings
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=debug

# Security (Development only - change for production!)
SESSION_SECRET=dev_secret_key_change_in_production
JWT_SECRET=dev_jwt_secret_change_in_production